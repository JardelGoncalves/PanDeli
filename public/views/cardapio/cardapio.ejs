<% include ../base/cabecalho.ejs %>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-pandeli">
            <a class="navbar-brand" href="/"><strong class="text-pandeli">Pandeli</strong></a>
