<main>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-pandeli">
            <a class="navbar-brand" href=""><strong class="text-pandeli">Pandeli</strong></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link text-pandeli" href="/"><i class="fas fa-home"></i> Inicio</strong></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cardapio"><strong><i class="fas fa-book-open"></i> Cardápio</strong></a>
                    </li>
                    <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <strong><i class="fas fa-smile-wink fa-lg"></i> Ola, <%= usuario.nome %> </strong>
                                  </a>
                                  <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="/dashboard">Minha Página</a>
                                    <a class="dropdown-item" href="/dashboard/pedidos">Pedidos</a>
                                    <a class="dropdown-item" href="/dashboard/produtos">Produtos</a>
                                    <a class="dropdown-item" href="/sair">Sair</a>
                                  </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><strong><i class="fas fa-shopping-cart"></i> Carrinho</strong></a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container" data-aos="fade-left" data-aos-anchor="#example-anchor" data-aos-offset="500">
        <div class="row">
            <div class="col-md-12">
                <div style="margin-top:70px;">
                        <h2 class="text-pandeli-red text-center">Produtos</h2>
                        <br>
                        
                            <div id="app" class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card">
                                            <div class="card-body">
                                                <form>
                                                    <div class="form-group">
                                                        <input type="text" placeholder="Nome do produto" class="form-control">
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group col-md-6">
                                                            <input type="text" placeholder="Unidade" class="form-control">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <input type="text" placeholder="Preço" class="form-control">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <textarea cols="20" rows="5" class="form-control" placeholder="Insira os ingredientes"></textarea>
                                                    </div>
                                                    <button v-if="edit === false" class="btn btn-pandeli btn-block"> Enviar </button>
                                                    <button v-else-if="edit === true" class="btn btn-primary btn-block"> Atualizar </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div> 
                                    <div class="col-md-5">
                                        <table class="table">
                                            <thead class="bg-pandeli">
                                                <tr>
                                                    <th scope="col" class="text-pandeli">Nome</th>
                                                    <th scope="col" class="text-pandeli">Unidade</th>
                                                    <th scope="col" class="text-pandeli">Ação</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr v-for="produto of produtos" :key="produto._id" >
                                                    <td class="text-pandeli-red">{{produto.nome}}</td>
                                                    <td class="text-pandeli-red">{{produto.unidade}}</td>
                                                    <td>
                                                        <button @click="deletaPrduto(produto._id)" type="button" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<br>
<script>
    var app = new Vue({
        el:"#app",
        data(){
            return{
                edit:false,
                produtos:[]
            }
        },
        mounted(){ 
            this.getProdutos();
        },
        methods:{
            getProdutos(){
                axios.get("http://localhost:3000/api/produto")
                .then(function(products){
                    this.produtos = products.data;
                }.bind(this))
            },
            deletaPrduto(id){
                if(confirm("Tem certeza?")){
                    axios.delete("http://localhost:3000/api/produto/"+id)
                    .then(function(data){
                        console.log(data)
                        this.getProdutos()
                    }.bind(this))
                }
            }
        }
    })
</script>
